<div class="container" id="home-flats">
  <h2 class="text-center">Cocktails</h2>
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/cities/london');">
          <div class="card-category"><%= c.name %></div>
          <div class="card-description">
            <h3><%= c.name %></h3>
          </div>
        </div>
          <div class="my-card-footer">
            <div class="footer-links">
        <p><i class="fas fa-dollar-sign"></i><%= c.name %></p>
        <p><i class="fas fa-users"></i><%= c.name  %></p>
    </div>
           <p> <%= link_to "More info", cocktail_path(c) %></p>
          </div>
      </div>
    <% end %>
    <p><%= link_to "Add new cocktail", new_cocktail_path %></p>
  </div>
</div>

